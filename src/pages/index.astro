---
import Layout from "../layout/Layout.astro";
---

<Layout>
  <!-- Hero Section -->
  <section class="hero-section">
    <div class="container">
      <header class="hero-header">
        <h1 class="header-text">LUCINDA BURMAN</h1>
        <p class="explanatory-text">Illustrator | Designer | Creative Director</p>
      </header>
    </div>
  </section>

  <!-- Portfolio Grid Section -->
  <section class="portfolio-section">
    <div class="container">
      <div class="portfolio-grid">
        <!-- Portfolio items will be dynamically added here -->
        <article class="portfolio-item">
          <div class="portfolio-placeholder">
            <p class="small-text">Portfolio Item 1</p>
          </div>
        </article>
        <article class="portfolio-item">
          <div class="portfolio-placeholder">
            <p class="small-text">Portfolio Item 2</p>
          </div>
        </article>
        <article class="portfolio-item">
          <div class="portfolio-placeholder">
            <p class="small-text">Portfolio Item 3</p>
          </div>
        </article>
        <article class="portfolio-item">
          <div class="portfolio-placeholder">
            <p class="small-text">Portfolio Item 4</p>
          </div>
        </article>
      </div>
    </div>
  </section>

  <!-- Navigation Button (Fixed Position) -->
  <button class="menu-button nav-text interactive-element" type="button">
    MENU
  </button>

  <!-- Social Links (Fixed Position) -->
  <aside class="social-links">
    <ul>
      <li><a href="#" class="small-text interactive-element">Instagram</a></li>
      <li><a href="#" class="small-text interactive-element">Behance</a></li>
      <li><a href="#" class="small-text interactive-element">LinkedIn</a></li>
    </ul>
  </aside>
</Layout>

<style>
  /* Hero Section */
  .hero-section {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    background-color: var(--color-background);
  }

  .hero-header h1 {
    margin-bottom: var(--spacing-md);
    letter-spacing: var(--tracking-wider);
  }

  .hero-header p {
    margin-bottom: 0;
    letter-spacing: var(--tracking-wide);
  }

  /* Portfolio Section */
  .portfolio-section {
    background-color: var(--color-surface);
    min-height: 100vh;
  }

  /* Portfolio Placeholder Items */
  .portfolio-placeholder {
    background-color: var(--color-modal-bg);
    border: 1px solid var(--color-primary);
    aspect-ratio: 4/5;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform var(--transition-normal);
  }

  .portfolio-placeholder:hover {
    transform: scale(1.02);
    border-color: var(--color-primary-hover);
  }

  /* Navigation Button */
  .menu-button {
    position: fixed;
    top: var(--spacing-lg);
    right: var(--spacing-lg);
    z-index: 1000;
    background: none;
    border: none;
    cursor: pointer;
    padding: var(--spacing-sm);
    letter-spacing: var(--tracking-wider);
  }

  /* Social Links */
  .social-links {
    position: fixed;
    left: var(--spacing-lg);
    top: 50%;
    transform: translateY(-50%);
    z-index: 100;
  }

  .social-links ul {
    list-style: none;
    padding: 0;
    margin: 0;
    writing-mode: vertical-lr;
    text-orientation: mixed;
  }

  .social-links li {
    margin: var(--spacing-sm) 0;
    transform: rotate(180deg);
  }

  .social-links a {
    text-decoration: none;
    letter-spacing: var(--tracking-wide);
    display: block;
    padding: var(--spacing-xs);
  }

  /* Responsive Adjustments */
  @media (max-width: 768px) {
    .social-links {
      position: static;
      transform: none;
      text-align: center;
      padding: var(--spacing-md);
      background-color: var(--color-surface);
    }
    
    .social-links ul {
      writing-mode: initial;
      display: flex;
      justify-content: center;
      gap: var(--spacing-md);
    }
    
    .social-links li {
      transform: none;
      margin: 0;
    }
    
    .menu-button {
      top: var(--spacing-md);
      right: var(--spacing-md);
    }
  }
</style>
